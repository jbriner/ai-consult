# ===========================================
# AI Consult - Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# Server Configuration
PORT=3000
NODE_ENV=development
APP_NAME=AI Consult

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# ===========================================
# Email Configuration (Brevo - Primary)
# ===========================================
EMAIL_PROVIDER=brevo
BREVO_API_KEY=your_brevo_api_key_here
BREVO_SENDER_NAME=AI Consult
BREVO_SENDER_EMAIL=noreply@yourdomain.com

# ===========================================
# Email Configuration (SMTP - Fallback)
# ===========================================
EMAIL_FALLBACK_PROVIDER=nodemailer
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_SENDER_NAME=AI Consult

# ===========================================
# Contact Form Settings
# ===========================================
CONTACT_FORM_RECIPIENT=admin@yourdomain.com
ADMIN_REPORT_EMAIL=admin@yourdomain.com

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=info
# LOG_TO_FILE=true
# LOG_TO_CONSOLE=true
